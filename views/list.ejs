<%- include("partials/header") -%>
    <div class="page-content page-container" id="page-content">
        <h1>Featured Location List</h1>
        <div class="row">
          <% locationsList.forEach(location => { %>
        <div class="col mb-4">
          <div class="card h-100" style="max-width: 20rem;">
              <div class="card-body">
               <h5 class="card-title"> <%=location.name%></h5> 
        <img class="card-img-top" src="<%=location.image %>"  alt="Card image cap">
        <h6 class="card-text">Location:</h6>
        <a href="<%=location.location %>"> <%=location.name %>.com</a>
        <h6 class="card-text">Description:</h6>
        <p class="card-text"> <%=location.description %></p>
        
        <font-awesome-icon icon="edit" />
        <font-awesome-icon icon="delete"/>
              </div>
          </div>
        </div>
        <% }) %> 
        </div>
      </div>
    </div>
</script>
